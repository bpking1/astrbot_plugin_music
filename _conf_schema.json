{
    "default_player_name": {
        "description": "默认点歌平台",
        "hint": "定义点歌命令默认使用的平台。所有平台都支持用命令实时调用：网易点歌、nj点歌、QQ点歌、酷狗点歌、酷我点歌、百度点歌、一听点歌、咪咕点歌、荔枝点歌、蜻蜓点歌、喜马拉雅、5sing原创、5sing翻唱、全民K歌",
        "type": "string",
        "options": [
            "网易点歌",
            "nj点歌",
            "QQ点歌",
            "酷狗点歌",
            "酷我点歌",
            "百度点歌",
            "一听点歌",
            "咪咕点歌",
            "荔枝点歌",
            "蜻蜓点歌",
            "喜马拉雅",
            "5sing原创",
            "5sing翻唱",
            "全民K歌",
            "Youtube"
        ],
        "default": "网易点歌"
    },
    "nodejs_base_url": {
        "description": "nodejs服务的api根地址",
        "hint": "此项配置决定nodejs服务api的根地址，命令 “nj点歌” 使用的是网易云nodejs服务",
        "type": "string",
        "default": "https://163api.qijieya.cn"
    },
    "song_limit": {
        "description": "搜索歌曲数量限制",
        "hint": "搜索歌曲数量限制",
        "type": "int",
        "slider": {
            "min": 1,
            "max": 20,
            "step": 1
        },
        "default": 5
    },
    "select_mode": {
        "description": "选择模式",
        "hint": "此配置决定搜索歌曲的展示方法。单曲模式默认选取第一首歌曲",
        "type": "string",
        "options": [
            "text(文本模式)",
            "single(单曲模式)"
        ],
        "default": "text(文本模式)"
    },
    "send_modes": {
        "description": "发送模式",
        "hint": "此配置决定发送歌曲方式的优先级, 排在前面的模式优先，发送失败时自动尝试下一种模式。 注意: 卡片模式仅QQ发送网易云音乐时可用, 语音模式、文件模式发送较慢，文本模式将以链接形式发送",
        "type": "list",
        "options": [
            "card(卡片模式)",
            "record(语音模式)",
            "file(文件模式)",
            "text(文本模式)"
        ],
        "default": [
            "card(卡片模式)",
            "record(语音模式)",
            "file(文件模式)",
            "text(文本模式)"
        ]
    },
    "enable_comments": {
        "description": "是否启用评论",
        "hint": "开启后在发送歌曲后附加一条评论",
        "type": "bool",
        "default": true
    },
    "enable_lyrics": {
        "description": "是否启用歌词",
        "hint": "开启后在发送歌曲后附加一张歌曲图片",
        "type": "bool",
        "default": false
    },
    "proxy": {
        "description": "代理地址",
        "hint": "如 http://127.0.0.1:7890，留空则直连。作用于网络请求时",
        "type": "string",
        "default": ""
    },
    "timeout": {
        "description": "点歌操作的超时时长（秒）",
        "hint": "点歌时用户在此时间内没有进行操作则自动取消点歌",
        "type": "int",
        "slider": {
            "min": 30,
            "max": 300,
            "step": 10
        },
        "default": 30
    },
    "timeout_recall": {
        "description": "撤回选歌消息",
        "hint": "达到超时时长后，撤回之前发送的选歌消息 (仅 aiocqhttp 平台支持)",
        "type": "bool",
        "default": true
    },
    "clear_cache": {
        "description": "重载插件时清空缓存",
        "hint": "文件模式下需要下载音频文件，缓存目录在data/plugin_data/astrbot_plugin_music/songs，此选项用于重载插件时是否清空缓存",
        "type": "bool",
        "default": true
    },
    "playlist_limit": {
        "description": "歌单容量限制",
        "hint": "决定了用户的歌单最多能添加多少首歌",
        "type": "int",
        "slider": {
            "min": 10,
            "max": 200,
            "step": 1
        },
        "default": 100
    },
